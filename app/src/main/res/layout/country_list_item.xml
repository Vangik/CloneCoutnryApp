<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E5E5E5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="174dp"
            android:layout_marginHorizontal="13dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher_country_background_foreground" />

        <ImageView
            android:id="@+id/iv_main_activity_country_flag"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_main_activity_country_label_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Country"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_toEndOf="@id/iv_main_activity_country_flag"
            />

        <TextView
            android:id="@+id/tv_main_activity_country_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:fontFamily="sans-serif"
            android:text="Country name"
            android:textColor="#000000"
            android:textSize="32sp"
            android:layout_toRightOf="@id/iv_main_activity_country_flag"
            android:layout_toEndOf="@id/iv_main_activity_country_flag"
            android:layout_below="@id/tv_main_activity_country_label_name"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>